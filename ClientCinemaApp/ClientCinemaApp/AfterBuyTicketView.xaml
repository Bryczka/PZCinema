<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientCinemaApp.AfterBuyTicketView" Title="Tickets">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="DimGray" x:Name="AfterBuyTicketViewLayout">
                <Label x:Name="Title" Text="List of tickets"  FontSize="30" TextColor="White" Margin="3,0,3,5" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label BackgroundColor="White" HorizontalOptions="FillAndExpand" HeightRequest="2" Margin="3,2,3,10"></Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>