<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientCinemaApp.ChangeIpView" BackgroundColor="DimGray">
    <ContentPage.Content>
        <StackLayout BackgroundColor="DimGray" VerticalOptions="StartAndExpand" Margin="0,100,0,0">
            <Label Text="Connections error! Change IP address." FontSize="20" TextColor="White" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
            <Entry x:Name="IpTextBox" TextColor="White" FontSize="20"></Entry>
            <Button x:Name="SaveIp" Text="Click to save ip" Clicked="SaveIp_Clicked" BackgroundColor="WhiteSmoke" FontSize="20"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>