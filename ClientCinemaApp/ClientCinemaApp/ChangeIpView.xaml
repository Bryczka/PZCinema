<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientCinemaApp.ChangeIpView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Connections error! Change IP address." />
            <Entry x:Name="IpTextBox"></Entry>
            <Button x:Name="SaveIp" Text="Click to save ip" Clicked="SaveIp_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>