<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientCinemaApp.FilmDetailedView" Title="Film details">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout x:Name="Layout" BackgroundColor="DimGray" >
                <Label x:Name="DetailedTitle" FontSize="35" TextColor="White" Margin="3,0,3,10" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label x:Name="DetailedAgeLimit" FontSize="20" TextColor="White" Margin="3,0,3,0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label x:Name="DetailedDuration" FontSize="20" TextColor="White" Margin="3,0,3,0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label x:Name="DetailedDescription" FontSize="20" TextColor="White" Margin="3,0,3,5" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                <Label x:Name="Filmshows"></Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
    