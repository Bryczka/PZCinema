<Window x:Class="AdminCinemaApp.SetIp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminCinemaApp"
        mc:Ignorable="d"
        Title="SetIp" Height="200" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextAlignment="Center" FontSize="16" TextWrapping="Wrap" Text="Connection error! Change IP addres!" VerticalAlignment="Top" Height="40" Width="274"/>
        <TextBox x:Name="IpTetBox" HorizontalAlignment="Left" Height="23" Margin="10,55,0,0" TextWrapping="Wrap" Text="Enter IP address here..." VerticalAlignment="Top" Width="274"/>
        <Button Content="Set IP" HorizontalAlignment="Left" Margin="105,116,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
